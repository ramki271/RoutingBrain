# App
APP_ENV=development
APP_SECRET_KEY=change-me-in-production
LOG_LEVEL=INFO

# API Keys (for incoming requests to this service)
# Comma-separated list of valid API keys
VALID_API_KEYS=rb-dev-key-1,rb-dev-key-2

# Provider API Keys
ANTHROPIC_API_KEY=sk-ant-...
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=...

# Ollama (local)
OLLAMA_BASE_URL=http://localhost:11434

# vLLM (self-hosted)
VLLM_BASE_URL=http://localhost:8000

# PostgreSQL
DATABASE_URL=postgresql+asyncpg://routingbrain:routingbrain@localhost:5432/routingbrain

# Redis
REDIS_URL=redis://localhost:6379/0

# Routing Brain
ROUTING_BRAIN_MODEL=claude-haiku-4-5-20251001
ROUTING_BRAIN_TIMEOUT_SECONDS=3
ROUTING_BRAIN_CONFIDENCE_THRESHOLD=0.6

# Config paths
MODELS_CONFIG_PATH=config/models.yaml
SETTINGS_CONFIG_PATH=config/settings.yaml
ROUTING_POLICIES_DIR=config/routing_policies
META_LLM_SYSTEM_PROMPT_PATH=config/meta_llm_system_prompt.txt
